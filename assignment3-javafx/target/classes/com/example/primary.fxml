<?xml version="1.0" encoding="UTF-8"?>

<!-- Import necessary libraries and controls -->
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>

<!-- Create a box layout-->
<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.PrimaryController">
   <children>
      <!-- Title -->
      <Label text="Welcome to My Calculator!" style="-fx-font-size: 18; -fx-text-fill: #000000;"/>
      <!-- Instruction -->
      <Label text="Please, insert two numbers of your choice" style="-fx-font-size: 14; -fx-text-fill: #000000;"/>
      <!-- Text fields for number inputs -->
      <TextField fx:id="num1Field"/>
      <TextField fx:id="num2Field"/>
      <!-- Buttons for choose calculation -->
      <Button text="Calculate Sum" onAction="#calculateSum" style="-fx-background-color: #89CFF0; -fx-min-width: 60; -fx-min-height: 60; -fx-font-weight: bold;"/>
      <Button text="Calculate Subtraction" onAction="#calculateSubtraction" style="-fx-background-color: #89CFF0; -fx-min-width: 60; -fx-min-height: 60; -fx-font-weight: bold;"/>
      <Button text="Calculate Multiplication" onAction="#calculateMultiplication" style="-fx-background-color: #89CFF0; -fx-min-width: 60; -fx-min-height: 60; -fx-font-weight: bold;"/>
      <Button text="Calculate Division" onAction="#calculateDivision" style="-fx-background-color: #89CFF0; -fx-min-width: 60; -fx-min-height: 60; -fx-font-weight: bold;"/>
      <!-- Operation result -->
      <Label fx:id="resultLabel" />
   </children>
   <!-- Insert padding -->
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>